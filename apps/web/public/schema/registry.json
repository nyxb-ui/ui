{
   "$schema": "https://json-schema.org/draft-07/schema#",
   "description": "A nyxb registry of components, hooks, pages, etc.",
   "type": "object",
   "properties": {
      "name": {
         "type": "string"
      },
      "homepage": {
         "type": "string"
      },
      "items": {
         "type": "array",
         "items": {
            "$ref": "https://nyxbui.design/schema/registry-item.json"
         }
      }
   },
   "required": ["name", "homepage", "items"],
   "uniqueItems": true,
   "minItems": 1
}
